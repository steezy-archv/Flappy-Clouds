@model IEnumerable<Flappy_Clouds.Entities.User>

@{
    ViewData["Title"] = "Manage Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Users</h1>
<hr/>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<br/>
<br/>

<h3>Admin</h3>
<table id="cool-table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            @if(user.Role == "Admin")
            {
                <tr>
                    <td>@user.FirstName @user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>@user.Address</td>
                    <td>
                        <a asp-controller="Admin" asp-action="EditUser" asp-route-id="@user.UserId" class="signup-btn">Edit</a>
                        <a asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@user.UserId" class="signup-btn" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                    </td>
                </tr>

            }
            
        }
    </tbody>
</table>

<br />
<br />

