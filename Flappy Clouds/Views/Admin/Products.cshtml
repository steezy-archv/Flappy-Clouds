@model IEnumerable<Flappy_Clouds.Entities.Product>

@{
    ViewData["Title"] = "Manage Products";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Products</h1>

<table id="cool-table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Actions</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Category?.Name</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@product.StockQuantity</td>
                <td>
                    <a asp-action="EditProduct" asp-route-id="@product.ProductId" class="signup-btn">Edit</a>
                    <form asp-action="DeleteProduct" asp-route-id="@product.ProductId" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this product?');">
                        <button type="submit" class="signup-btn">Delete</button>
                    </form>
                </td>
                </tr>
        }
    </tbody>
</table>
