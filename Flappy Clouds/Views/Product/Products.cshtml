@* @model IEnumerable<Flappy_Clouds.Entities.Product> *@
@model ProductListViewModel

@{
    ViewData["Title"] = "Products";
}

<div class="product-section">
    <h2 class="text-center mt-4">Our Products</h2>

    <div class="product-grid">
        @foreach (var product in Model.Products)
        {
                <div class="card">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text fw-bold">$@product.Price</p>
                        <a href="@Url.Action("Details", "Product", new { id = product.ProductId })" class="product-btn">View Details</a>
                    </div>
                </div>
        }
    </div>

</div>

<!-- Pagination Controls -->
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link" href="?page=@(Model.CurrentPage - 1)">Previous</a>
        </li>
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                <a class="page-link" href="?page=@i">@i</a>
            </li>
        }
        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
            <a class="page-link" href="?page=@(Model.CurrentPage + 1)">Next</a>
        </li>
    </ul>
</nav>
